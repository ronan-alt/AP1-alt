<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP1.Vues.AcceuilClassementEleve"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- TITRE -->
            <Label Text="Classement des équipes"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#1E1E1E"
                   Margin="0,20,0,10" />

            <!-- COLLECTION VIEW -->
            <CollectionView x:Name="ClassementCollectionView"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Frame CornerRadius="15"
                               HasShadow="True"
                               BackgroundColor="White"
                               Padding="15"
                               Margin="0,5">

                            <Grid ColumnDefinitions="auto, *, auto"
                                  VerticalOptions="Center">

                                <!-- RANG -->
                                <Label Text="{Binding Rang}"
                                       FontAttributes="Bold"
                                       FontSize="26"
                                       TextColor="#0078D7"
                                       VerticalOptions="Center"
                                       Margin="5,0" />

                                <!-- NOM ÉQUIPE -->
                                <Label Grid.Column="1"
                                       Text="{Binding NomEquipe}"
                                       FontAttributes="Bold"
                                       FontSize="18"
                                       TextColor="#333"
                                       VerticalOptions="Center"
                                       Margin="15,0" />

                                <!-- SCORE -->
                                <Label Grid.Column="2"
                                       FontAttributes="Bold"
                                       FontSize="20"
                                       TextColor="#222"
                                       VerticalOptions="Center">

                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Score}" />
                                            <Span Text=" pts" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                            </Grid>

                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <!-- BOUTON RETOUR -->
            <Button Text="Retour à l'accueil"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    Clicked="OnRetourClicked"
                    Margin="0,20" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
