<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP1.Vues.AjouterEquipe"
             Title="Gestion d'équipes">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Sélection d'équipe existante -->
        <Label Text="Sélectionne une équipe existante :" FontAttributes="Bold"/>
        <Picker x:Name="TeamsPicker" Title="Choisir une équipe"/>

        <Button Text="Confirmer" Clicked="ConfirmButtonClick"/>

        <!-- Création d'une nouvelle équipe -->
        <Label Text="Ou crée ta propre équipe :" FontAttributes="Bold" Margin="0,20,0,0"/>
        <HorizontalStackLayout Spacing="10">
            <Entry x:Name="NewTeamEntry" Placeholder="Nom de la nouvelle équipe" HorizontalOptions="FillAndExpand"/>
            <Button Text="Créer" Clicked="CreateEquipeClick"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
